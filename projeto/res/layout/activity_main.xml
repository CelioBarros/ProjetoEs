<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.es.telainicial.MainActivity" >

    <Button
        android:id="@+id/recorde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/iniciar"
        android:layout_alignBottom="@+id/iniciar"
        android:layout_centerHorizontal="true"
        android:onClick="recordeTela"
        android:background="#8B0000"
        android:textColor="#FFFFFF"
        android:text="Recorde" />

    <Button
        android:id="@+id/ajuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recorde"
        android:layout_toLeftOf="@+id/recorde"
        android:text="Ajuda" 
        android:background="#8B0000"
        android:textColor="#FFFFFF"
        android:onClick="ajuda"/>

    <Button
        android:id="@+id/iniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="43dp"
        android:layout_toLeftOf="@+id/ajuda"
        android:onClick="iniciarJogo"
        android:background="#8B0000"
        android:textColor="#FFFFFF"
        android:text="Iniciar" />

    <Button
        android:id="@+id/sair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/recorde"
        android:layout_alignBottom="@+id/recorde"
        android:layout_toRightOf="@+id/opcoes"
        android:onClick="sairJogo"
        android:background="#8B0000"
        android:textColor="#FFFFFF"
        android:text=" Sair " />

    <Button
        android:id="@+id/opcoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ajuda"
        android:layout_alignBottom="@+id/ajuda"
        android:layout_toRightOf="@+id/recorde"
        android:background="#8B0000"
        android:onClick="configuracao"
        android:textColor="#FFFFFF"
        android:text="Opções" />

</RelativeLayout>
